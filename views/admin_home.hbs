{{>admin_header}}
<h2>{{adminheader}}</h2>
<h3>Hello {{user}}</h3>
<button><a href="http://localhost:3000/admin/home">Get ALL Records</a></button>
<button><a href="http://localhost:3000/admin/create_post">POST</a></button>
<hr>

{{#each users}}
{{#with this as |params|}}
<div class="container col-lg-8 col-md-10 col-sm-12 col-12">
    <div class="card">
        <div class="card-header bg-warning">
            User Record
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item"> UserID : {{params.userId}}</li>
            <li class="list-group-item"> Email : {{params.email}}</li>
            <li class="list-group-item"> Password : {{params.password}}</li>
            <li class="list-group-item">Date : {{params.date}}</li>
        </ul>
    </div>
</div>
<hr>
{{/with}}
{{/each}}


{{#if isPost}}
<div class="container">
    <div class="col-md-12">
        {{# if errors }}
        {{# each errors }}
        <p class="alert alert-danger">{{ this.message }}</p>
        {{/each}}
        {{/if}}
    </div>
    <form method="post" action="/admin/create_post">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label>Email</label>
                <input type="email" class="form-control" name="email">
            </div>
            <div class="form-group col-md-6">
                <label>Username</label>
                <input type="text" class="form-control" name="username" />
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label>Password</label>
                <input type="password" class="form-control" name="password">
            </div>
            <div class="form-group col-md-6">
                <label>Confirm Password</label>
                <input type="password" class="form-control"
                    name="confirm_password">
            </div>
        </div>
        <button type="submit" class="btn btn-primary btn-block">Create POST</button>
    </form>
</div>
{{else}}

{{/if}}